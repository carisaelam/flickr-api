<%= form_with url: search_photos_path, method: :get, local: true do |form| %>
  <%= form.label :user_id, 'Flickr User Id:' %>
  <%= form.text_field :user_id, value: params[:user_id] %>

  <%= form.submit 'Submit' %>
<% end %>

<% if @photos.any? %>
  <h2>Photos:</h2>

  <% @photos.each do |photo| %>
    <%= image_tag "https://live.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}_m.jpg", alt: photo.title %>
    <p><%= photo.title %></p>
  <% end %>

  <% else %>
    <p>No photos found for this user</p>
<% end %>

